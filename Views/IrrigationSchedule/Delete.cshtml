@model ClimateSmartAgricultureSystem.Models.IrrigationSchedule

@{
    ViewData["Title"] = "Delete Irrigation Schedule";
}

<h1>Delete Irrigation Schedule</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Irrigation Schedule</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Farm
        </dt>
        <dd class="col-sm-10">
            @Model.Farm.Location
        </dd>
        <dt class="col-sm-2">
            Start Time
        </dt>
        <dd class="col-sm-10">
            @Model.StartTime
        </dd>
        <dt class="col-sm-2">
            End Time
        </dt>
        <dd class="col-sm-10">
            @Model.EndTime
        </dd>
        <dt class="col-sm-2">
            Water Amount
        </dt>
        <dd class="col-sm-10">
            @Model.WaterAmount
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ScheduleId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
