@model ClimateSmartAgricultureSystem.Models.IrrigationSchedule

@{
    ViewData["Title"] = "Edit Irrigation Schedule";
}

<h1>Edit Irrigation Schedule</h1>

<h4>Irrigation Schedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <input type="hidden" asp-for="ScheduleId" />
                <label asp-for="FarmId" class="control-label"></label>
                <select asp-for="FarmId" class="form-control" asp-items="ViewBag.Farms"></select>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WaterAmount" class="control-label"></label>
                <input asp-for="WaterAmount" class="form-control" />
                <span asp-validation-for="WaterAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
