@model ClimateSmartAgricultureSystem.Models.Report

@{
    ViewData["Title"] = "Create Report";
}

<h1>Create Report</h1>

<h4>Report</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users"></select>
            </div>
            <div class="form-group">
                <label asp-for="ReportType" class="control-label"></label>
                <input asp-for="ReportType" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ReportData" class="control-label"></label>
                <textarea asp-for="ReportData" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
