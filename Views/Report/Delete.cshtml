@model ClimateSmartAgricultureSystem.Models.Report

@{
    ViewData["Title"] = "Delete Report";
}

<h1>Delete Report</h1>

<h3>Are you sure you want to delete this report?</h3>
<div>
    <h4>Report</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReportType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReportType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReportData)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReportData)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GeneratedOn)
        </dt>
        <dd class="col-sm-10">
