@model ClimateSmartAgriculture.Models.Crop

@{
    ViewData["Title"] = "Delete Crop";
}

<h1>Delete Crop</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Crop</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Farm
        </dt>
        <dd class="col-sm-10">
            @Model.Farm.Location
        </dd>
        <dt class="col-sm-2">
            Crop Type
        </dt>
        <dd class="col-sm-10">
            @Model.CropType
        </dd>
        <dt class="col-sm-2">
            Planting Date
        </dt>
        <dd class="col-sm-10">
            @Model.PlantingDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Harvest Date
        </dt>
        <dd class="col-sm-10">
            @Model.HarvestDate.ToShortDateString()
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.CropId" method="post">
        <input type="hidden" asp-for="CropId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
