@model ClimateSmartAgriculture.Models.Crop

@{
    ViewData["Title"] = "Edit Crop";
}

<h1>Edit Crop</h1>

<h4>Crop</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CropId" />
            <div class="form-group">
                <label asp-for="FarmId" class="control-label"></label>
                <select asp-for="FarmId" class="form-control" asp-items="ViewBag.Farms"></select>
            </div>
            <div class="form-group">
                <label asp-for="CropType" class="control-label"></label>
                <input asp-for="CropType" class="form-control" />
                <span asp-validation-for="CropType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlantingDate" class="control-label"></label>
                <input asp-for="PlantingDate" class="form-control" />
                <span asp-validation-for="PlantingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HarvestDate" class="control-label"></label>
                <input asp-for="HarvestDate" class="form-control" />
                <span asp-validation-for="HarvestDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
