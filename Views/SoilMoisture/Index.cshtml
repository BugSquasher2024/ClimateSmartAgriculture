@model IEnumerable<ClimateSmartAgriculture.Models.SoilMoisture>

@{
    ViewData["Title"] = "Soil Moisture";
}

<h1>Soil Moisture</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Farm</th>
            <th>Date</th>
            <th>Level</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Farm.Location</td>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.Level</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MoistureId" class="btn btn-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.MoistureId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
