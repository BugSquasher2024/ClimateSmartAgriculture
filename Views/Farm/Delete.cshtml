@model ClimateSmartAgriculture.Models.Farm

@{
    ViewData["Title"] = "Delete Farm";
}

<h1>Delete Farm</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Farm</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>
        <dt class="col-sm-2">
            Size
        </dt>
        <dd class="col-sm-10">
            @Model.Size
        </dd>
        <dt class="col-sm-2">
            Climate Zone
        </dt>
        <dd class="col-sm-10">
            @Model.ClimateZone
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.FarmId" method="post">
        <input type="hidden" asp-for="FarmId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>

