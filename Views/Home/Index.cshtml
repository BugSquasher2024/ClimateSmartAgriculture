@{
    ViewData["Title"] = "Home";
}

<div class="jumbotron bg-light text-center">
    <h1 class="display-4">Welcome to Climate-Smart Agriculture</h1>
    <p class="lead">Helping farmers adapt to climate change and optimize farm productivity sustainably.</p>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="feature bg-white rounded text-center p-4 mb-4 shadow-sm">
                <i class="fas fa-leaf feature-icon text-success"></i>
                <h3 class="mt-3">Crop Management</h3>
                <p>Log details about your crops and manage planting and harvest dates easily.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature bg-white rounded text-center p-4 mb-4 shadow-sm">
                <i class="fas fa-cloud-sun feature-icon text-warning"></i>
                <h3 class="mt-3">Weather Data</h3>
                <p>View real-time weather data specific to your farm's location.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature bg-white rounded text-center p-4 mb-4 shadow-sm">
                <i class="fas fa-tint feature-icon text-info"></i>
                <h3 class="mt-3">Soil Moisture Monitoring</h3>
                <p>Monitor soil moisture levels to make informed decisions about irrigation.</p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="feature bg-white rounded text-center p-4 mb-4 shadow-sm">
                <i class="fas fa-calendar-alt feature-icon text-primary"></i>
                <h3 class="mt-3">Irrigation Scheduling</h3>
                <p>Create and manage irrigation schedules based on weather and soil moisture data.</p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="feature bg-white rounded text-center p-4 mb-4 shadow-sm">
                <i class="fas fa-chart-line feature-icon text-secondary"></i>
                <h3 class="mt-3">Data Analytics</h3>
                <p>Analyze historical data to improve farm performance and sustainability.</p>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS and dependencies -->
